<UserControl x:Class="Encrypt_Decrypt.VVM.ViewModel.CaesarKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Encrypt_Decrypt.VVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Background="#283044">
    <Grid>
        <Grid>
            <TextBlock FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Margin="0,0,0,150">Enter key</TextBlock>
            <TextBox Name="keyInput" Width="200" Height="50" Background="#EBF5EE" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>
            <Button Click="CaesarsKey_Click"  Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#EBF5EE" Margin="0,150,0,0" Name="SubmitCaesarsKey">Submit</Button>
        </Grid>
    </Grid>
</UserControl>
